<% if flash[:notice] %>
<P> <%=flash[:notice] %></P>
<% end %>

<h1>Book</h1>
<body>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<% @posts.each do |post| %>
		<tbody>
			<tr>
				<td> <%= post.title  %> </td>
				<td> <%= post.body %> </td>
				<td> <%= link_to "Show", post_path(post.id) %> </td>
				<td> <%= link_to "Edit", edit_post_path(post.id) %></td>
				<td> <%= link_to "Destroy", destroy_post_path(post.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

<h2>New book</h2>

<%= form_for(@post) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
</body>
